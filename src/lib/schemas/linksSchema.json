{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Links List",
  "description": "Schema for various link lists.",
  "type": "object",
  "properties": {
    "college": {
      "$ref": "#/definitions/linkTable"
    },
    "private": {
      "$ref": "#/definitions/linkTable"
    }
  },
  "definitions": {
    "linkItem": {
      "type": "object",
      "properties": {
        "href": { "type": "string", "title": "লিঙ্ক" },
        "label": { "type": "string", "title": "লেবেল" },
        "target": { "type": "string", "title": "টার্গেট (e.g., _blank)" },
        "rel": { "type": "string", "title": "Rel (e.g., noopener noreferrer)" },
        "colSpan": { "type": "number", "title": "কলাম স্প্যান" }
      },
      "required": ["href", "label"]
    },
    "linkTable": {
      "type": "array",
      "title": "লিঙ্কের সারণী",
      "items": {
        "type": "array",
        "title": "সারি",
        "items": {
          "$ref": "#/definitions/linkItem"
        }
      }
    }
  }
}
