{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Courses List",
  "description": "Schema for the courses list file.",
  "type": "array",
  "items": {
    "type": "object",
    "title": "Course",
    "properties": {
      "id": {
        "type": "string",
        "title": "কোর্স আইডি (ইউনিক)"
      },
      "title": {
        "type": "string",
        "title": "কোর্সের নাম"
      },
      "description": {
        "type": "string",
        "title": "সংক্ষিপ্ত বিবরণ",
        "widget": "textarea"
      },
      "icon": {
        "type": "string",
        "title": "আইকনের নাম (lucide-react)",
        "enum": ["University", "HeartPulse", "Cog", "Blocks", "BookMarked", "Briefcase"]
      },
      "slug": {
        "type": "string",
        "title": "স্লাগ (URL-এর জন্য)"
      },
      "stats": {
        "type": "array",
        "title": "পরিসংখ্যান",
        "items": {
          "type": "object",
          "properties": {
            "value": { "type": "string", "title": "মান" },
            "label": { "type": "string", "title": "লেবেল" },
            "tooltip": { "type": "string", "title": "টুলটিপ (ঐচ্ছিক)" }
          },
          "required": ["value", "label"]
        }
      },
      "features": {
        "type": "array",
        "title": "কোর্সের ফিচার",
        "items": {
          "type": "string",
          "title": "ফিচার"
        }
      },
      "forWhom": {
        "type": "array",
        "title": "কোর্সটি কাদের জন্য",
        "items": {
          "type": "string",
          "title": "কার জন্য"
        }
      }
    },
    "required": ["id", "title", "description", "icon", "slug", "features", "forWhom"]
  }
}
