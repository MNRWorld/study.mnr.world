{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Question Bank Cards",
  "description": "Schema for the main question bank cards.",
  "type": "array",
  "items": {
    "type": "object",
    "title": "প্রশ্নব্যাংক কার্ড",
    "properties": {
      "title": {
        "type": "string",
        "title": "শিরোনাম"
      },
      "author": {
        "type": "string",
        "title": "লেখক"
      },
      "description": {
        "type": "string",
        "title": "বিবরণ",
        "widget": "textarea"
      },
      "logo": {
        "type": "string",
        "title": "লোগো URL",
        "format": "uri"
      },
      "href": {
        "type": "string",
        "title": "লিঙ্ক"
      },
      "bgColor": {
        "type": "string",
        "title": "পটভূমির রঙ (Tailwind class)",
        "description": "e.g., bg-blue-400"
      }
    }
  }
}
