{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Deadlines List",
  "description": "Schema for the deadlines list file.",
  "type": "array",
  "items": {
    "type": "object",
    "title": "Deadline",
    "properties": {
      "id": {
        "type": "string",
        "title": "আইডি (ইউনিক)"
      },
      "title": {
        "type": "string",
        "title": "শিরোনাম"
      },
      "date": {
        "type": "string",
        "title": "তারিখ ও সময়",
        "format": "date-time",
        "description": "ISO 8601 format (e.g., 2025-02-15T09:00:00)"
      }
    }
  }
}
